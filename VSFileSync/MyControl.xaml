<UserControl x:Class="Raydude.VSFileSync.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="640"
             Name="MyToolWindow">
    <Grid Margin="0,0,0,0">
        <Canvas Loaded="Canvas_Loaded">
            <TextBlock HorizontalAlignment="Left" Text="List of Solutions/Projects currently tracked." VerticalAlignment="Top" Canvas.Left="30" Canvas.Top="10"/>
            <Button Content="_Click Me!" Click="button1_Click" Width="553" Height="80" x:Name="button1" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Left="58" Canvas.Top="362"/>
            <ListBox Height="144" Canvas.Left="10" Canvas.Top="31" Width="620">
                <ListBoxItem/>
            </ListBox>
        </Canvas>
    </Grid>
</UserControl>
